<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla1" >


    <Button
        android:id="@+id/btn_seleccDepor"
        android:text="Deportes"
        android:layout_width="250dp"
        android:layout_height="65dp"

        android:layout_marginBottom="1dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_crearPartido"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_login"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_crearPartido"
        android:text="Crear Partido"
        android:layout_width="250dp"
        android:layout_height="65dp"

        android:layout_marginTop="1dp"

        app:layout_constraintTop_toBottomOf="@id/btn_seleccDepor"
        app:layout_constraintBottom_toTopOf="@+id/btn_ofrecerseJugador"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/custom_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ofrecerseJugador"
        android:text="Ofrecerse como Jugador"

        android:layout_width="250dp"
        android:layout_height="65dp"


        app:layout_constraintTop_toBottomOf="@id/btn_crearPartido"
        app:layout_constraintBottom_toTopOf="@+id/btn_buscarjugadoresdispo"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/custom_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_buscarjugadoresdispo"
        android:text="Buscar Jugadores Disponibles"
        android:layout_width="250dp"
        android:layout_height="65dp"


        app:layout_constraintTop_toBottomOf="@id/btn_ofrecerseJugador"
        app:layout_constraintBottom_toTopOf="@+id/btn_buscarpartidosdispo"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/custom_btn"
        app:layout_constraintStart_toStartOf="parent" />



    <Button
        android:id="@+id/btn_buscarpartidosdispo"
        android:text="Buscar Partidos Disponibles"
        android:layout_width="250dp"
        android:layout_height="65dp"


        app:layout_constraintTop_toBottomOf="@id/btn_buscarjugadoresdispo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/custom_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>